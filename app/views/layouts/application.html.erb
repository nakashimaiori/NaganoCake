<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fiuld">
          <div class="collapse navbar-collapse">
            <nav class="nav navbar-nav navbar-left">
              <span><%= link_to 'LOGO', root_path, class: 'btn btn-default btn-lg navbar-btn' %></span>
            </nav>
            <nav class="nav navbar-nav navbar-right">
              <!--会員がログインしている場合の表示 -->
              <% if customer_signed_in? %>
                <span>ようこそ、<%= current_customer.last_name + current_customer.first_name %>さん!</span>
                <span><%= link_to 'マイページ', public_customers_path, class: 'btn btn-default navbar-btn' %></span>
                <span><%= link_to '商品一覧', public_products_path, class: 'btn btn-default navbar-btn' %></span>
                <span><%= link_to 'カート', public_cart_items_path, class: 'btn btn-default navbar-btn' %></span>
                <span><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'btn btn-default navbar-btn' %></span>
                <!--管理者がログインしている場合の表示-->
              <% elsif admin_signed_in? %>
                <span><%= link_to '商品一覧', admin_products_path, class: 'btn btn-default navbar-btn' %></span>
                <span><%= link_to '会員一覧', admin_customers_path,class: 'btn btn-default navbar-btn' %></span>
                <span><%= link_to '注文履歴一覧', admin_orders_path, class: 'btn btn-default navbar-btn' %></span>
                <span><%= link_to 'ジャンル一覧', admin_genres_path, class: 'btn btn-default navbar-btn' %></span>
                <span><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'btn btn-default navbar-btn' %></span>
                <!--ログインしていない時（会員、管理者共通）-->
              <% else %>
                <span><%= link_to 'About', public_about_path, class: 'btn btn-default navbar-btn' %></span>
                <span><%= link_to '商品一覧', public_products_path, class: 'btn btn-default navbar-btn' %></span>
                <span><%= link_to '新規登録', new_customer_registration_path, class: 'btn btn-default navbar-btn' %></span>
                <span><%= link_to 'ログイン', new_customer_session_path, class: 'btn btn-default navbar-btn' %></span>
              <% end %>
            </nav>
          </div>
        </div>
      </nav>
    </header>
      <%= render 'layouts/notifications' %>
    <%= yield %>
    <footer>
      <div class="container">
        <div class="row">
        </div>
      </div>
    </footer>
  </body>
</html>
