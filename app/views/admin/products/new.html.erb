<div class="row">
  <div class="col-xs-8 col-xs-offset-2">

    <%= form_for @product, url: admin_products_path do |f| %>

      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h3><%= @product.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-xs-5">
        <h3>商品新規登録</h3>
        <div class="field row">
          <%= f.attachment_field :image %>
        </div>
        <!-- <div>
          商品登録時のイメージ画像を表示(余裕があれば)
        </div> -->
      </div>

      <div class="col-xs-5">
        <div class="field row">
          <%= f.label :商品名 %>
          <%= f.text_field :name, class: "col-xs-12" %>
        </div>

        <div class="field row">
          <%= f.label :商品説明 %>
          <%= f.text_area :detail, class: "col-xs-12" %>
        </div>

        <div class="field row">
          <%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --" %>
        </div>

        <div class="field row">
          <%= f.label :税抜価格 %>
          <%= f.text_field :before_price, class: "col-xs-12" %>
        </div>

        <div class="field row">
          <%= f.label :販売ステータス %>
          <%= f.select :sale_status, [["販売中", true], ["売切れ", false]] %>
        </div>

        <div class="actions row">
          <%= f.submit '新規登録', class: "btn-lg btn-primary col-xs-4" %>
        </div>
      </div>

    <% end %>
  </div>
</div>