<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 head">
      <h1 class="title">New Product</h1>
    </div>

    <div class="col-xs-10 col-xs-offset-1">

      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h3><%= @product.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-horizontal" role="form">
        <%= form_for @product, url: admin_products_path do |f| %>

          <div class="col-xs-6">
            <div class="form-group img-pos">
              <div id="item-image">
              <%= attachment_image_tag @product, :image, :fill, 300, 300, fallback: "no-image.jpg", size: "300x300" %>
            </div>
            </div>
            <div class="select-image">
              <%= f.attachment_field :image, class: 'image' %>
            </div>
          </div>

          <div class="col-xs-6">
            <div class="form-group">
              <%= f.label :商品名, class: "col-xs-4" %>
              <div class="col-xs-8">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :商品説明, class: "col-xs-4" %>
              <div class="col-xs-8">
                <%= f.text_area :detail, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :ジャンル, class: "col-xs-4" %>
              <div class="col-xs-8">
                <%= f.collection_select :genre_id, Genre.where(status:'有効'), :id, :name, {}, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :税抜価格, class: "col-xs-4" %>
              <div class="col-xs-8">
                <%= f.text_field :before_price, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :販売ステータス, class: "col-xs-4" %>
              <div class="col-xs-8">
                <%= f.select :sale_status, [["販売中", true], ["売切れ", false]], {}, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.submit '新規登録', class: "btn btn-lg btn-pos col-xs-12" %>
            </div>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>