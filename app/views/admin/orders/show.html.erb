<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <h3>注文履歴詳細</h3>

    <table class="table">
      <tbody>
        <tr>
          <td>購入者</td>
          <td> <%= @order.receive_name %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td> 〒<%= @order.receive_postal_code %> <%= @order.receive_address %><br><%= @order.receive_name %></td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td> <%= @order.how_pay %> </td>
        </tr>
        <tr>
          <td>注文ステータス</td>
          <td>
            <%= form_for @order, url: admin_order_path do |f| %>
              <%= f.select :order_status,["入金待ち", "入金確認", "製作中", "発送準備中", "発送済"] %>
            <%= f.submit "更新", class: "btn btn-primary btn-sm" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>

  </div>
  <div class="col-xs-6 col-xs-offset-2">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.product.name %></td>
            <td><%= order_item.after_price.to_s(:delimited, delimiter: ',') %></td>
            <td><%= order_item.qty %></td>
            <!-- 小計を出すためにsubtotalメソッドをorder_itemモデルに定義して呼び出し -->
            <td><%= order_item.subtotal.to_s(:delimited, delimiter: ',') %></td>
            <td>
              <%= form_for order_item, url: admin_order_item_path(order_item) do |f| %>
                <%= f.select :made_status,["着手不可", "製作待ち", "製作中", "製作完了"] %>
                <%= f.submit "更新", class: "btn btn-primary btn-sm" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-xs-2">
    <table>
      <tbody>
        <tr>
          <td>商品合計</td>
          <!-- 商品合計を出すためにtotal_priceメソッドをorderモデルに定義
          各order_itemの小計（subtotal）をeachを使って足し、商品合計を算出 -->
          <td><%= @order.total_price.to_s(:delimited, delimiter: ',') %>円</td>
        </tr>
        <tr>
          <td>送料</td>
          <td><%= @order.postage %>円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <!-- 商品合計と送料の合計＝請求金額合計 -->
          <td><%= (@order.total_price + @order.postage).to_s(:delimited, delimiter: ',') %>円</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>