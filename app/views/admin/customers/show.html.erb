<h3><%= @customer.last_name+@customer.first_name %>さんの会員詳細</h3>
  <table>
  	<tr>
  	  <th>顧客ID</th>
  	  <th><%= @customer.id %>
  	    <% if @customer.customer_status == true %>
          <%= "有効会員" %>
        <% else %>
          <%= "退会済み" %>
        <% end %>
      </th>
  	</tr>

  	<tr>
  	  <th>氏名</th>
  	  <th><%= @customer.last_name %>
  	    <%= @customer.first_name %></th>
  	</tr>

  	<tr>
  	  <th>フリガナ</th>
  	  <th><%= @customer.last_name_kana %>
  	    <%= @customer.first_name_kana %></th>
  	</tr>

  	<tr>
  	  <th>郵便番号</th>
  	  <th><%= @customer.postal_code %></th>
  	</tr>

  	<tr>
  	  <th>住所</th>
  	  <th><%= @customer.address %></th>
  	</tr>

  	<tr>
  	  <th>電話番号</th>
  	  <th><%= @customer.phone_number %></th>
  	</tr>

  	<tr>
  	  <th>メールアドレス</th>
  	  <th><%= @customer.email %></th>
  	</tr>

  </table>
  <td><%= link_to "編集する", edit_admin_customer_path(@customer) %></td>
  <td><%= link_to "注文履歴一覧を見る", admin_orders_path %></td>
