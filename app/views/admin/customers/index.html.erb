<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 head">
      <h1 class="title">Customer List</h1>
    </div>

    <div class="col-xs-10 col-xs-offset-1">

      <table class="table">
        <thead class="thead-color">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <th><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class: "link-style" %></th>
              <th><%= customer.email %></th>
              <th>
                <% if customer.customer_status == '有効' %>
                  <span class="label label-primary"><%= "有効" %></span>
                <% else %>
                  <span class="label label-danger"><%= "退会済" %></span>
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
