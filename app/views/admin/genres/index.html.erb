<div class="row">
  <div class="col-xs-4 col-xs-offset-2">
    <h3>ジャンル一覧・追加</h3>

      <% if @genre.errors.any? %>
        <div id="error_explanation">
          <h3><%= @genre.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-xs-5">
        <div class="field row">
          <%= form_for @genre, url: admin_genres_path do |f| %>
            <%= f.label :ジャンル %>
            <%= f.text_field :name, class: "col-xs-12" %>
            <%= f.label :name, "有効" %>
            <%= f.radio_button :status, "有効", checked: true %>
            <%= f.label :name, "無効" %>
            <%= f.radio_button :status, "無効" %>
            <%= f.submit '追加', class: "btn btn-primary "%>
          <% end %>
        </div>
      </div>

    <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.status %></td>
            <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>