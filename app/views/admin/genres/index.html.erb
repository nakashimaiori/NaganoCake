<div class="row">
  <div class="col-xs-10 col-xs-offset-2 top">
    <h1>ジャンル一覧</h1>
  </div>

  <div class="col-xs-3 col-xs-offset-2">

    <% if @genre.errors.any? %>
      <div id="error_explanation">
        <h3><%= @genre.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-horizontal" role="form">
      <%= form_for @genre, url: admin_genres_path do |f| %>

        <div class="form-group">
          <%= f.label :ジャンル, class: "col-xs-12" %>
          <div class="col-xs-12">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <%= f.label :name, "有効" %>
        <%= f.radio_button :status, "有効", checked: true %>
        <%= f.label :name, "無効" %>
        <%= f.radio_button :status, "無効" %>
        <%= f.submit '追加', class: "btn btn-pos col-xs-12"%>

      <% end %>
    </div>
  </div>

  <div class="col-xs-4 col-xs-offset-1">
    <table class="table">
      <thead class="thead-color">
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.status %></td>
            <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-default" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>