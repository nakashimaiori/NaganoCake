<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<%= render "public/products/genres_sideber" %>
		</div>

		<div class="col-xs-10">
			<h2>商品一覧<span>(全 <%= @products.count %> 件)</span></h2>
			<div id="products_box">
				<% @products.each do |product| %>
				<%= link_to(public_product_path(product)) do %>
					<div class="product_block">
						<div><%= image_tag attachment_url(product, :image, :fill, 150, 100, format: "jpg") %></div>
						<div><%= product.name %></div>
						<div>¥<%= product.before_price.to_s(:delimited, delimiter: ',') %></div>
					</div>
				<% end %>
				<% end %>
			</div>
			<br><%= paginate @products %>



		</div>
	</div>
</div>

<style>
	table thead tr th {
		text-align: center
	}
	span {
		font-size: large;
	}
	.product_block {
		float: left;
		width: 180px;
		height: 200px;
	}
</style>






