<div class="container">
	<div class="row">

		<div class="col-xs-2">
			<%= render "public/products/genres_sideber" %>
		</div>

		<div class="flashmessage">
			<% if flash[:notice] %>
    　　　　　<p class="notice"></p>
　　　　　	<% end %>
        </div>

		<%= form_for(@cart_item, url: public_cart_items_path) do |f| %>

			<div class="col-xs-4">
				<%= image_tag attachment_url(@product, :image, :fill, 300, 200, format: "jpg") %>
			</div>

			<div class="col-xs-6">
				<div><%= @product.name %></div>
				<div><%= @product.detail %></div>
				<div>¥<%= @product.tax_price %>(税込)</div>

				<%= f.hidden_field :product_id, :value => @product.id %>

				<div><%= f.number_field :item_qty, class: "cart_item_class", min: 1, max: 99 %>個</div>
				<%= f.submit "カートに入れる", class: "btn btn-primary" %>
			</div>

		<% end %>


	</div>
</div>
