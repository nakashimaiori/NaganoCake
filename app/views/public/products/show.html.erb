<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<%= render "public/products/genres_sideber" %>
		</div>

		<%= form_for public_product_path, url: public_cart_item_path do |f| %>
			<div class="col-xs-4">
				<%= image_tag attachment_url(@product, :image, :fill, 300, 200, format: "jpg") %>
			</div>

			<div class="col-xs-6">
				<div><%= @product.name %></div>
				<div><%= @product.detail %></div>
				<div><%= @product.before_price %></div>
				<div><%= f.select :qty, [["1", 1],["2", 2],["3", 3]],{ include_blank: "個数選択"},{ id: "qty", class: "product_class" } %></div>
				<%= f.submit "カートに入れる", class: "btn btn-primary" %>
			</div>
		<% end %>


	</div>
</div>