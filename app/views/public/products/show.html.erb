<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<%= render "public/products/genres_sideber" %>
		</div>
		<div class="col-xs-4">
			<%= attachment_imade_tag(@product, :image, :fill, 600, 700) %>
		</div>
		<div class="col-xs-4">
			<%= @product.name %>
			<%= @product.detail %>
			<h3>¥<%= @product.after_price %><span>(税込)</span></h3>
		</div>

		<div class="actions row">
			<%= link_to "カートに入れる", public_about_path, class: "btn btn-primary col-xs-2" %>
		</div>

<%= form_for @product do |product| %>
	<%= product.name %>
	<%= product.detail %>
	<%= product.after_price %>
	<%= f.select :qty %>
	<%= f.submit "カートに入れる" class: "btn btn-primary col-xs-2"%>
<% end %>

	</div>
</div>