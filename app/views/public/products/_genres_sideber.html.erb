<table class="table table-hover">
	<thead>
		<tr>
			<th>Category<i class="fas fa-search"></i></th>
		</tr>

		<% genres.each do |genre| %>
			<tr>
				<td><%= link_to genre.name, search_public_products_path(genre.id), method: :get, class: "link" %></td>
			</tr>
		<% end %>
    </thead>
</table>



