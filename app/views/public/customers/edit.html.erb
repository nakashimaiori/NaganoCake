<h1>登録情報編集</h1>

  <%= form_for(@customer, url:public_customers_path(current_customer.id)) do |f| %>
      <table>
        <tr>
          <td>氏名　姓<%= f.text_field :last_name %>名<%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>カナ セイ<%= f.text_field :last_name_kana %>メイ<%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号<%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所<%= f.text_area :address %></td>
        </tr>
        <tr>
          <td>電話番号<%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <td>email<%= f.text_field :phone_number %></td>
        </tr>
      </table>

    <%= f.submit "編集内容を保存する" %>
    <% end %>