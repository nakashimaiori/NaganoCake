<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %> (性)
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    (名)
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %> (セイ)
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    (メイ)
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>(ハイフンなし)
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>(ハイフンなし)
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>
<div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "退会する", withdraw_public_customers_path(@customer.id), method: :patch %>

<%= link_to "Back", :back %>
