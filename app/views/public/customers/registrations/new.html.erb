<div class="container">
  <div class="row header">
    <h2><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>　Sign Up</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <fieldset class="form-group">
  <%= render "public/customers/shared/error_messages", resource: resource %>
　<table>
  <div class="field">
    <%= f.label :名前 %> (性)
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    (名)
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %> (セイ)
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    (メイ)
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :Email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>(ハイフンなし)
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>(ハイフンなし)
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>(6文字以上)
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>(確認用)
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

</table>

  <div class="actions">
    <%= f.submit "登録",class: "btn btn-outline-secondary" %>
  </div>
  </fieldset class="form-group">
<% end %>

<button type="button" class="btn btn-outline-secondary"><%= render "public/customers/shared/links" %></button>

</div>

