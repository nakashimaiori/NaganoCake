<h1>注文情報入力</h1>
  <%= form_with(model: @order, local: true, url: {action: 'confirm'}) do |f| %>

		<h2>支払方法</h2>
		<div>
			<%= f.radio_button :how_pay, :credit_card, checked: true %>
			<%= f.label :how_pay, "クレジットカード", {value: :credit_card, style: "display: inline-block;"} %>
		</div>
		<div>
			<%= f.radio_button :how_pay, :bank_transfer %>
			<%= f.label :how_pay, "銀行振込", {value: :bank_transfer, style: "display: inline-block;"} %>
		</div>


		<h2>お届け先</h2>


		<div class="customer_address">
			<%= f.radio_button :receive_address, :male, checked: true %>
			<%= f.label :revers_postal_code, "ご自身の住所", {value: :male, style: "display: inline-block;"} %>
			<div>1234567 東京都千代田区<br>香川健一</div>
		</div>


		<div class="derivery_address">
			<%= f.radio_button :receive_address, :male　%>
			<%= f.label :revers_postal_code, "登録済住所から選択", {value: :male, style: "display: inline-block;"} %>
			<div>
				<%= f.select :receive_postal_code, {'大阪府': 1, '京都府': 2}, disabled: true %>
			</div>
		</div>


		<div class="new_address">
			<%= f.radio_button :receive_address, :male　%>
			<%= f.label :revers_postal_code, "新しいお届け先", {value: :male, style: "display: inline-block;"} %>

			<div class="field">
		    <%= f.label :receive_postal_code, "郵便番号（ハイフンなし）" %>
		    <%= f.text_field :receive_postal_code, autofocus: true %>
		  </div>

		  <div class="field">
		    <%= f.label :receive_address, "住所　　　　　　　　　　" %>
		    <%= f.text_field :receive_address, autofocus: true %>
		  </div>

		  <div class="field">
		    <%= f.label :receive_name, "宛名　　　　　　　　　　" %>
		    <%= f.text_field :receive_name, autofocus: true %>
		  </div>
		</div>


		<%= f.submit "確認画面へ進む" %>

	<% end %>