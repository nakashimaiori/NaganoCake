<%= form_with(model: @order, local: true, url: {action: 'create'}) do |f| %>
	<%= @order.how_pay %>
	<%= @order.receive_postal_code %><%= @order.receive_address %>
	<%= @order.receive_name %>

	<%= f.hidden_field :receive_postal_code, :value => @customer.postal_code %>
	<%= f.hidden_field :receive_address, :value => @customer.address %>
	<%= f.hidden_field :receive_name, :value => @customer.last_name + @customer.first_name %>
	<%= f.hidden_field :how_pay, :value => @order.how_pay %>
	<%= f.submit "注文を確定する" %>
<% end %>