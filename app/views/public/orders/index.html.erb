<h1>注文履歴一覧</h1>
<table>
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
			<tr>
				<td><%= order.created_at %></td>
				<td><%= order.receive_postal_code %><br>
					<% order.receive_address %><br>
					<%= order.receive_name %>
				</td>
				<td><%= order.product_id %></td>
				<td><%= order.order_status %></td>
				<td><%= link_to "表示する", public_order_path %></td>
			</tr>
		<% end %>
	</tbody>
</table>
