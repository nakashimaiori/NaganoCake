<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h3>注文履歴一覧</h3>

    <table class="table">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= order.receive_postal_code %><br>
              <%= order.receive_address %><br>
              <%= order.receive_name %>
            </td>
            <td>
              <% order.order_items.each do |order_item| %>
                <%= order_item.product.name %><br>
              <% end%>
            </td>
            <td><%= (order.total_price + order.postage).to_s(:delimited, delimiter: ',') %>円</td>
            <td><%= order.order_status %></td>
            <td><%= link_to '表示する', public_order_path(order.id), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

