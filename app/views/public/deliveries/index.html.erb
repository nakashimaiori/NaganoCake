<h1>配送先登録/一覧</h1>

  <%= form_for(@delivery, url: public_deliveries_path) do |f| %>
  <table>
  	<tr>
  	  <td>配送先郵便番号<%= f.text_field :postal_code %></td>
  	</tr>
  	<tr>
      <td>配送先住所<%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名<%= f.text_field :name %></td>
    </tr>
  </table>
  <%= f.submit '投稿' %>
<% end %>




<table>
  <thead>
	  <tr>
	    <th>郵便番号</th>
	    <th>住所</th>
	    <th>宛名</th>
	    <th></th>
	   </tr>
   </thead>
   <tbody>
   	<% @deliverys.each do |delivery| %>
	  <tr>
	    <td><%= delivery.postal_code %></td>
	    <td><%= delivery.address %></td>
	    <td><%= delivery.name %></td>
	    <td><%= link_to "編集する", edit_public_delivery_path(delivery) %></td>
	    <td><%=link_to "削除する",  public_delivery_path(delivery), method: :delete %></td>
	  </tr>
    <% end %>
	</tbody>
</table>
