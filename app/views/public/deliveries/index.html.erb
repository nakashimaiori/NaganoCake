<div class="container">
  <div class="row">
  <div class="col-xs-1">
  </div>
  <div class="col-xs-10">

<h1>配送先登録/一覧</h1>

  <%= form_for(@delivery, url: public_deliveries_path) do |f| %>

  <% if @delivery.errors.any? %>
        <div id="error_explanation">
          <h3><%= @delivery.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @delivery.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

  <table>
  	<tr>
  	  <td>配送先郵便番号</td><td><%= f.text_field :postal_code %></td>
  	</tr>
  	<tr>
      <td>配送先住所</td><td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名</td><td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td></td><td><div class="text-right"><%= f.submit '登録', class: "btn btn-primary" %></div></td>
    </tr>
  </table>
<% end %>



<table class="table">
  <thead>
	  <tr>
	    <th>郵便番号</th>
	    <th>住所</th>
	    <th>宛名</th>
	    <th></th>
      <th></th>
	   </tr>
   </thead>
   <tbody>
   	<% current_customer.deliveries.each do |delivery| %>
	  <tr>
	    <td>〒<%= delivery.postal_code %></td>
	    <td><%= delivery.address %></td>
	    <td><%= delivery.name %></td>
	    <td><%= link_to "編集する", edit_public_delivery_path(delivery), class: 'btn btn-primary' %></td>
	    <td><%=link_to public_delivery_path(delivery), method: :delete do %>
       <i class="far fa-trash-alt"></i>
      <% end %>
      </td>
	  </tr>
    <% end %>
	</tbody>
</table>
  </div>
  <div class="col-xs-1">
  </div>
  <div class="row">
</div>

