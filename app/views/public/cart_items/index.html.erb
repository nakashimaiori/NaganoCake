

  <h1>ショッピングカート</h1>
  <table>
	  <caption><%= link_to 'カートを空にする', "" %></caption>
	  <thead>
		  <tr>
			  <th>商品名</th>
			  <th>単価(税込)</th>
			  <th>数量</th>
			  <th>小計</th>
			  <th></th>
		  </tr>
	  </thead>
	  <tbody>
		  <tr>
		  	<% @customer.cart_items.each do |cart_item| %>
			  <td><%= cart_item.product.name %></td>
			  <td><%= cart_item.product.before_price %>円</td>
			                                               <!-- 横並びのclass↓ -->
			  <td><%= form_for public_cart_items_path , html: {class:"form-inline"} do |f| %>
					<div class="">
					  <%= f.select :count,(1..30).to_a, {}, class: "form-control" %>
					  <%= f.submit "変更" %>
					</div>
					<% end %>
			  </td>
			  <td><%=link_to '削除する', public_cart_item_path(cart_item.id), method: :delete %></td>
		  </tr>
		    <% end %>
	  </tbody>
  </table>

  <table>
    <tr>
      <td>合計金額</td>
      <td>     円</td>
    </tr>
  </table>

<%= link_to '買い物を続ける', root_path %>
